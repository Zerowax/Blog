---
interface Props {
    title: string;
    progress: string;
    color: string;
}
const { title, progress, color } = Astro.props;
---
<li class="progress">
    <h3>{title}</h3>
    <div class="skill-shadow">
        <div class="skill-bar" style={`width: ${progress}%`}>
            <span class="value">{progress}</span>
        </div>
    </div>
</li>

<style define:vars={{color}}>
    li.progress {
        display: flex;
        flex-direction: column;
        justify-content: center;
        width: 40%;
    }
    li.progress .skill-shadow {
        background-color: rgba(100, 100, 100, 0.2);
        border-radius: 1rem;
        width: 100%;
    }
    .skill-shadow .skill-bar {
        background-color: var(--color);
        box-shadow: 5px 0 15px var(--color);
        padding: 1rem;
        border-radius: 1rem;
        font-style: italic;
        color: #fefefe;
        text-shadow: 1px 1px 2px darkslategray;
        font-size: 1.1em;
    }
    .skill-bar > span.value::after {
        content: " %";
    }
</style>